@page "/wiki/edit/{title}"
@model velociraptor.Pages.EditModel
@{
    ViewData["Title"] = @Model.Article.Title;
}

<p class="display-3">@ViewData["Title"]</p>

<br/>

<form method="post">
    <input asp-for="Article.Title" type="hidden" value="@Model.Article.Title"/>
    <div class="input-group flex-nowrap">
        <textarea asp-for="Article.Text" class="form-control" rows="12"></textarea>
    </div>
    <br/>
    <input type="submit" class="btn btn-primary"/>
</form>
